<div class="col-12 ml-5">
    <div class="row ml-5">
        <p class="mot">
            <b id="title">
                <%=mot.word%>
            </b> :
            <%=mot.definition%>.
        </p>
    </div>

    <div class="row ml-5">
        <%if(locals.link){%>
        <% links.forEach( (link, index) => { %> 
            <%- include('./link', link) %>
        <% }); %><%}%>
    </div>


    <div class="row ml-5">
        <!-- <form action="/like" method="POST"> -->
        <div class="input-group">
            <div class="input-group-prepend">
                <div class="input-group-text" id="btnGroupAddon">XXX Likes</div>
            </div>
            <button class="btn btn-success" name="like" value="<%=mot.word%>" onclick="likethis("<%=mot.word%>")">
                <i class="fas fa-thumbs-up"></i>
            </button>
        </div>
        <!-- </form> -->

        <a href="#" data-toggle="modal" data-target="#modalEditpost">
            <button class="btn btn-warning" name="edit" value="<%=mot.word%>">
                <i class="fas fa-edit"></i>
            </button></a>

        <form action="/glossary" method="POST">
            <button class="btn btn-danger" name="deleted" type="submit" value="<%=mot.word%>">
                <i class="fas fa-trash-alt"></i>
            </button>
        </form>
    </div>
</div>